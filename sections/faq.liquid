                        <div class="faq_section-title-contract"></div>
                      </div>
                    </div>
                    <div id="group-1" class="faq_section">
                    {%- for block in section.blocks -%}
                      {%- if block.settings.group == "group-1" -%}
                      <div class="faq_item">
                        <div class="faq_question">
                          <div class="text-weight-semibold">{{ block.settings.question }}</div>
                          <div class="faq_question-arrow"></div>
                        </div>
                        <div class="faq_answer hidden">
                          <div class="faq_answer-text">{{ block.settings.answer }}</div>
                        </div>
                      </div>
                     {% endif %}
