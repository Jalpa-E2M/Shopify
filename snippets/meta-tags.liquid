<title>
  {{ page_title }} {%- unless page_title contains shop.name %} | {{ shop.name }}{% endunless -%}
</title>

{% if page_description %}
  <meta name="description" content="{{ page_description | escape }}">
{% endif %}

{% if template contains 'collection' and collection.image %}
  <meta property="og:image" content="{{ collection.image.src | img_url: '1200x' }}">
  <meta property="og:image:secure_url" content="{{ collection.image.src | img_url: '1200x' }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="628">
{% elsif page.metafields.custom.seo_image != nil %}
  <meta property="og:image" content="{{ page.metafields.custom.seo_image | img_url: '1200x' }}">
  <meta property="og:image:secure_url" content="{{ page.metafields.custom.seo_image | img_url: '1200x' }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="628">
{% endif %}

{%- if settings.favicon != blank -%}
  <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
{% else %}
  <link rel="icon" type="image/png" href="{{ 'favicon.png' | asset_img_url: width: 32, height: 32}}">
{%- endif -%}