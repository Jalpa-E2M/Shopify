<div id="{{ section.settings.anchor-id }}" class="heading-block bg-color-{{ section.settings.bg-color }} {{ section.settings.visibility }}">
  <div class="padding-top padding-{{ section.settings.padding-top }}">
    <div class="padding-bottom padding-{{ section.settings.padding-bottom }}">
      <div class="fade-in-{{ section.settings.fade }}">
        <div class="page-padding">
          <div class="container-{{ section.settings.container-width }} w-container">
            <div class="text-align-{{ section.settings.text-alignment }}">
              <div class="heading-layout">

                {%- for block in section.blocks -%}
                  {%- case block.type -%}

                    {%- when 'title' -%}
                      <div class="padding-top padding-{{ block.settings.padding-top }}">
                        <div class="padding-bottom padding-{{ block.settings.padding-bottom }}">
                          {% if block.settings.link != "" %}
                            <a href="{{ block.settings.link }}">
                            {% endif %}
                            <{{ block.settings.tag }} class="heading-{{ block.settings.title-size }} text-style-{{ block.settings.style }}">
                              {{ block.settings.text }}
                            </{{ block.settings.tag }}>
                            {% if block.settings.link != "" %}
                            </a>
                          {% endif %}
                        </div>
                      </div>

                    {%- when 'tagline' -%}

                      <div class="padding-top padding-{{ block.settings.padding-top }}">
                        <div class="padding-bottom padding-{{ block.settings.padding-bottom }}">
                          {% if block.settings.link != "" %}
                            <a href="{{ block.settings.link }}" class="heading-tag w-inline-block">
                            {% else %}
                              <div class="heading-tag w-inline-block">
                              {% endif %}
                              <div class="text-tag text-style-{{ block.settings.style }}">
                                {{ block.settings.text }}
                              </div>
                              {% if block.settings.link != "" %}
                              </a>
                          {% else %}
                            </div>
                          {% endif %}
                        </div>
                      </div>


                    {%- when 'paragraph' -%}

                      <div class="padding-top padding-{{ block.settings.padding-top }}">
                        <div class="padding-bottom padding-{{ block.settings.padding-bottom }}">
                          <div class="rich-text text-style-{{ block.settings.style }} rich-text_paragraph is-{{ block.settings.size }} {% if block.settings.dropcap == true %}drop-cap{% endif %}">
                            {{ block.settings.text }}
                          </div>
                        </div>
                      </div>


                    {%- when 'link' -%}

                      <div class="padding-top padding-{{ block.settings.padding-top }}">
                        <div class="padding-bottom padding-{{ block.settings.padding-bottom }}">
                          <a class="{{ block.settings.style }} w-button" href="{{ block.settings.link }}">
                            {{block.settings.text }}
                          </a>
                        </div>
                      </div>


                  {%- endcase -%}
                {%- endfor -%}


              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

