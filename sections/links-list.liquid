<div id="{{ section.settings.anchor-id }}" class="list bg-color-{{ section.settings.bg-color }} wf-section {{ section.settings.visibility }}">
  <div class="fade-in-{{ section.settings.fade }}">
    <div class="padding-top padding-{{ section.settings.padding-top }}">
      <div class="padding-bottom padding-{{ section.settings.padding-bottom }}">
        <div class="list_component">
          <div class="page-padding">
            <div class="container-{{ section.settings.container-width }} w-container">
              <div class="list_wrapper {% if section.settings.is-swiper %}is-swiper {% endif %}{% if section.settings.vertical-title != blank %}has-vertical-title{% endif %}">
                <div class="{% if section.settings.is-swiper %}swiper is-list {% endif %}{% if section.settings.vertical-title != blank %}has-vertical-title{% endif %}">
                  {% if section.settings.title != "" or section.settings.list-url != blank %}
                    <div class="list-header-wrapper {% if section.settings.is-swiper %}is-swiper{% endif %}">
                      {% if section.settings.title != "" %}
                        <div class="text-align-center hide-mobile-landscape">
                          <div class="heading-m">{{ section.settings.title }}
                          </div>
                        </div>
                        <div class="text-align-left show-mobile-landscape">
                          <div class="heading-m">{{ section.settings.title }}
                          </div>
                        </div>
                      {% endif %}
                      {% if section.settings.list-url != blank %}
                        <div class="flex-grow text-align-right">
                          <a href="{{ section.settings.list-url }}" class="button-text w-button">{{ section.settings.list-url-text }}
                          </a>
                        </div>
                      {% endif %}
                    </div>
                  {% endif %}
                  {% if section.settings.view-switcher %}
                    <div class="list-header-wrapper {% if section.settings.is-swiper %}is-swiper{% endif %} show-mobile-landscape">
                      <div class="view-switcher-layout" style="margin-top:20px;">
                        <div class="text-tag">View:</div>
                        <a href="#" class="view-switcher_grid w-inline-block"></a>
                        <a href="#" class="view-switcher_col w-inline-block"></a>
                      </div>
                    </div>
                  {% endif %}
                  <div class="list_layout is-{{ section.settings.columns }}-col{% if section.settings.is-swiper %} swiper-wrapper{% endif %}">


                    {%- for block in section.blocks -%}
                      {%- case block.type -%}

                        {%- when 'link' -%}
                          <div class="{% if section.settings.is-swiper %}swiper-slide list_item{% else %}list_item-wrapper{% endif %} of-{{ section.settings.columns }} w-inline-block">
                            <div class="list_item-layout{% if section.settings.layout-horizontal == true %} is-horizontal{% endif %}">
                              <div class="list_item-visual-content{% if section.settings.layout-horizontal == true %} is-horizontal{% endif %}">

                                <a href="{{ block.settings.url }}" class="img-{{ section.settings.img-ratio }}"><img src="{{ block.settings.image | image_url: width:600 }} width=" auto"
                                                              height=" auto" loading=" lazy" alt="{{ block.settings.image.alt | t }}" class=" img-base">
                                </a>

                                <a href="{{ block.settings.url }}" class="img-overlay" name="{{ block.settings.hover-image.alt | t }}" alt="{{ block.settings.hover-image.alt | t }}" >
                                  {% if block.settings.hover-image %}
                                    <img src="{{ block.settings.hover-image | image_url: width:600 }} width=" auto" height=" auto"
                                                                  loading=" lazy" class="list_item-image" alt="{{ block.settings.hover-image.alt | t }}">{% endif %}
                                </a>

                              </div>
                              <div class="list_item-info">
                                <div class="list_item-header-wrapper">

                                  <a class="list_item-title" href="{{ block.settings.url }}">

                                    <div class="text-item serif">
                                      {% if block.settings.title != "" %}
                                        {{ block.settings.title }}
                                      {% endif %}

                                    </div>

                                  </a>

                                </div>
                                {% if block.settings.description != "" %}
                                  <div class="body-small">{{ block.settings.description }}
                                  </div>
                                {% endif %}
                              </div>
                            </div>
                          </div>



                        {%- when 'article' -%}
                          <div class="{% if section.settings.is-swiper %}swiper-slide list_item{% else %}list_item-wrapper{% endif %} of-{{ section.settings.columns }} w-inline-block">
                            <div class="list_item-layout{% if section.settings.layout-horizontal == true %} is-horizontal{% endif %}">
                              <div class="list_item-visual-content{% if section.settings.layout-horizontal == true %} is-horizontal{% endif %}">

                                <a href="{{ block.settings.article.url }}" class="img-{{ section.settings.img-ratio }}"><img src="{{ block.settings.article.image | image_url: width:600 }}" width="auto" loading="lazy" alt="{{ block.settings.article.image.alt | t}}" class="img-base">
                                </a>

                                <a href="{{ block.settings.article.url }}" class="img-overlay" alt="{{ block.settings.article.title }}" name="{{ block.settings.article.title }}">
                                  {% if block.settings.article.metafields.custom.hover_image %}
                                    <img src="{{ block.settings.article.metafields.custom.hover_image | image_url: width:600 }}" width="auto" loading="lazy" class="list_item-image" alt="{{ block.settings.article.metafields.custom.hover_image.alt | t }}">{% endif %}
                                </a>

                              </div>
                              <div class="list_item-info">
                                <div class="list_item-header-wrapper">

                                  <a class="list_item-title" href="{{ block.settings.article.url }}">

                                    <div class="text-item serif text-style-3lines">{{ block.settings.article.title }}

                                    </div>

                                  </a>

                                </div>
                                <div class="body-small text-style-3lines">{{ block.settings.article.excerpt }}
                                </div>
                              </div>
                            </div>
                          </div>

                      {% endcase %}
                    {% endfor %}


                  </div>
                </div>
                {% if section.settings.is-swiper %}
                  <div class="swiper-button-left is-shop-list {% if section.settings.vertical-title != blank %}hidden{% endif %}"></div>
                  <div class="swiper-button-next is-shop-list"></div>
                  <div class="swiper-pagination"></div>
                  {% comment %} <div class="hidden w-embed w-script">

                    <script>
                      currentSwiper = document
                        .currentScript
                        .parentNode
                        .parentNode
                        .firstChild
                        .nextElementSibling;
                      navNext = currentSwiper.nextElementSibling.nextElementSibling;
                      navPrev = currentSwiper.nextElementSibling;
                      pagination = currentSwiper.nextElementSibling.nextElementSibling.nextElementSibling;
                      var swipername = new Swiper(currentSwiper, {
                        slidesPerView: "auto",
                        slidesPerGroupAuto: false,
                        speed: 250,

// spaceBetween: 45,
                        loop: true,
                        initialSlide: 0,
                        centeredSlides: false,
                        shortSwipes: true,
                        threshold: 20,
                        passiveListeners: true,
                        mousewheel: {
                          releaseOnEdges: false,
                          forceToAxis: true,
                          sensitivity: 0.5
                        },
                        navigation: {
                          nextEl: navNext,
                          prevEl: navPrev
                        },
                        pagination: {
                          el: pagination,
                          type: 'bullets',
                          clickable: 'false'
                        }
                      });
                    </script>



                  </div> {% endcomment %}
                {% endif %}
                {% if section.settings.vertical-title != blank %}
                  <div class="list_vertical-title">
                    <div class="heading-l">{{ section.settings.vertical-title }}
                    </div>
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

