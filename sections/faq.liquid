                    <h1 class="heading-l">{{ section.settings.page-title }}</h1>
                  </div>
                  <div class="faq_menu-layout">
                    {% if section.settings.group-1 != nil and section.settings.group-1 != "" %}<a href="#group-1" class="text-link">{{ section.settings.group-1 }}</a>{% endif %}
